#include "p16F628a.inc" ;incluir librerias relacionadas con el dispositivo
__CONFIG _FOSC_INTOSCCLK & _WDTE_OFF & _PWRTE_OFF & _MCLRE_OFF & _BOREN_OFF & _LVP_OFF & _CPD_OFF & _CP_OFF

RES_VECT CODE 0x0000 ; processor reset vector
GOTO START ; go to beginning of program

INT_VECT CODE 0x004
    DECFSZ CNT
    GOTO $+7
    CALL cancion
    INCF nota
    MOVLW D'4'
    MOVWF CNT
    ;
    ;
    MOVLW D'250' ; preload value 190
    MOVWF TMR0
    bcf INTCON, T0IF ; clr TMR0 interrupt flag
RETFIE

MAIN_PROG CODE 

CNT equ 0x30
nota equ 0x31
 
i equ 0x32
j equ 0x33
k equ 0x34
 
ii equ 0x35
jj equ 0x36
kk equ 0x37
 
fin equ 0x38

 
START 
 
    CLRF nota
    CLRF fin
 
    MOVLW 0x07
    MOVWF CMCON
    BSF STATUS, RP0
    MOVLW d'0'
    MOVWF TRISB
    MOVWF TRISA
    
    movlw b'10000111'
    movwf OPTION_REG
    BCF STATUS, RP0 ; BANK 0
    
    ; setup TMR0 INT
    bsf INTCON, GIE ; enable global interrupt
    bsf INTCON, T0IE ; enable TMR0 interrupt
    bcf INTCON, T0IF ; clr TMR0 interrupt flag to turn on,
    ; must be cleared after interrupt
    ; 256uS * 195 =~ 50mS
    ; 255 - 195 = 60
    MOVLW D'60' ; preload value
    MOVWF TMR0
    MOVLW D'10' ; 50mS * 20 = 1 Sec.
    MOVWF CNT
    CLRF PORTA
    CLRF PORTB
    
NOTAS
    BTFSS fin,0
    BSF PORTB,7
    call tiempo
    
    BCF PORTB,7
    call tiempo
    
    GOTO NOTAS
    
tiempo:
	movfw i
	movwf ii
iloop:  movfw j
	movwf jj
jloop:  decfsz jj,f
	goto jloop
	decfsz ii,f
	goto iloop
	movfw k
	movwf kk
	decfsz kk
	goto $-1
	return
	
cancion:
    CLRF fin
    MOVFW nota
    XORLW d'0'
    BTFSC STATUS,Z
    call re4
    
    MOVFW nota
    XORLW d'1'
    BTFSC STATUS,Z
    call re4
    
